
<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Nombre' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'Apellido' %>
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label 'Correo' %>
    <%= f.email_field :email, required: true %>
  </div>
  <div class="field">
      <%= f.label :juega, '¿Es jugador?' %>
      <%= f.check_box :juega %>
  </div>
  <div class="field">
    <%= f.label 'Contraseña' %>
    <%= f.password_field :password, required: true %>
  </div>
  <div class="field">
    <%= f.label 'Confirmar contraseña' %>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Ingresar'%>
  </div>
<% end %>

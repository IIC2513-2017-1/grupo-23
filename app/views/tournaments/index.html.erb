<% if current_user %>
  <div class="new-btn">
    <%= link_to 'Nuevo Torneo', new_tournament_path %>
  </div>
<% end %>
<div class="tournaments-stream tile">

  <h1>Torneos</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Creador</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @tournaments.each do |tournament| %>
        <tr>
          <td><%= link_to tournament.name, tournament %></td>
          <td><%= tournament.user.name %></td>
          <% if tournament.user == current_user%>
          <td><%= link_to 'Edit', edit_tournament_path(tournament), class: "btn-custom2" %></td>
          <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-custom2"%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<li class="publication-stream-item">
  <% if publication.user%>
    <div class="author-info">
      <span class="publication-author-name">
        <strong>
          <%= "#{publication.user.full_name}" %>
        </strong>
      </span>
      <span class="publication-author-email">
        <%=" #{publication.user.email}" %>
      </span>
    </div>
  <%end%>
  <span class="timestamp">
    Posted <%= time_ago_in_words(publication.created_at) %> ago
  </span>
  <span class="image">
    <%= image_tag publication.image , class: "publication_image"%>
  </span>
  <span class="content">
    <%= link_to publication.content, publication_path(publication) %>
  </span>
</li>

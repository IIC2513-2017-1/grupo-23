<li class="publication-stream-item">
  <div class="author-info">
    <span class="publication-author-name">
    Autor
      <strong>
       <%= "#{publication.user.full_name}" %>
      </strong>
    </span>
    <br>
    Email
    <span class="publication-author-email"><%= link_to publication.user.email, publication.user %></span>
  </div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(publication.created_at) %> ago
  </span>
  <br>
  <span class="content">
    <%= publication.content %>
  </span>
</li>

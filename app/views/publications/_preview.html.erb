<li class="publication-stream-item">
  <div class="author-info">
    <span class="publication-author-name">
      <strong>
      <%= "#{publication.user.full_name}" %>
      </strong>
    </span>
    <span class="publication-author-email"><%=" #{publication.user.email}" %></span>
  </div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(publication.created_at) %> ago
  </span>
  <span class="content">
    <%= publication.content %>
  </span>
</li>

<div class="publication-stream">
  <% if current_user %>
    <div class="new-btn">

        <a>Nueva Publicacion</a>

    </div>
    <div class="form-style tile hidden new">
        <%= render 'form', publication: Publication.new %>
    </div>
  <% end %>
  <br>
  <% if @publications %>
    <ol>
      <% @publications.reverse.each do |publication| %>
        <%= render 'publications/preview', publication: publication %>
      <% end %>
    </ol>
  <% else %>
    <p class="tile"> No tienes publicaciones </p>
  <% end %>
</div>

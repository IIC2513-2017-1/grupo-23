<!DOCTYPE html>
<html>
  <head>
    <title>Supercampeones</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="home">
        <%= link_to 'Home', root_path %>
        <% if current_user %>
          <%= link_to 'Perfil', current_user %>
        <% end %>
      </div>

      <nav id="main-menu">
        <%= link_to 'Usuarios', users_path %>
        <%= link_to 'Publicaciones', publications_path %>
        <%= link_to 'Comentarios', comments_path %>
        <%= link_to 'Equipos', teams_path %>
        <%= link_to 'Torneos', tournaments_path %>
        <%= link_to 'Partidos', matches_path %>
      </nav>

      <div id="user-bar">
        <% if current_user %>
          <div class="name">Bienvenido, <%= current_user.name %></div>
          <%= link_to 'Salir', session_path, method: :delete %>
        <% else %>
          <%= link_to 'Ingresar', new_session_path %>
          <%= link_to 'Registrarse', new_user_path %>
        <% end %>
      </div>
    </header>
    <main>
      <% [:alert, :notice].each do |flash_type| %>
        <% if (flash_message = flash[flash_type]).present? %>
          <div class="<%= flash_type %>"><%= flash_message %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <hr>
      <div id="project">Â© Supercampeones 2017</div>
      <div id="license">
        <a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/">
          <img alt="Creative Commons License" src="https://i.creativecommons.org/l/by-sa/4.0/88x31.png"/>
        </a>
      </div>
    </footer>
  </body>
</html>

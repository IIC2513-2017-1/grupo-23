<p id="notice"><%= notice %></p>

<div class="matches-stream">
  <h1>Partidos</h1>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Visitor</th>
        <th>Local</th>
        <th>Torneo</th>
        <th>Ganador</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.date %></td>
          <td><%= match.visitor.name %></td>
          <td><%= match.local.name %></td>
          <td><%= match.tournament.name %></td>
          <% if match.ganador %>
            <td><%= match.ganador.name %></td>
          <% else %>
            <td></td>
          <% end %>

          <td><%= link_to 'Show', match , class: 'btn-custom2'%></td>
          <% if current_user == match.tournament.user %>
          <td><%= link_to 'Edit', edit_match_path(match) , class: 'btn-custom2'%></td>
          <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn-custom2'%></td>
          <%end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="new-match-btn">
  <%= link_to 'Nuevo Partido', new_match_path,class:"btn-custom1"%>
</div>

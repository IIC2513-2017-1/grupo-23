<%= simple_form_for(@match) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, required: true %>
    <%= f.input :result %>
    <%= f.input :visitor, required: true %>
    <%= f.input :local, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
